<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="128dp"
    android:layout_height="196dp">
    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/sale_sticker"
        android:layout_width="32dp"
        android:layout_height="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:src="@color/red"/>
    <TextView
        android:id="@+id/tv_sale_percent"
        android:text="-34%"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_alignTop="@id/sale_sticker"
        android:layout_alignBottom="@id/sale_sticker"
        android:layout_alignLeft="@id/sale_sticker"
        android:layout_alignRight="@id/sale_sticker"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="155.000 Ä"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_image"
        android:layout_margin="8dp"/>
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="16dp"
        />
</RelativeLayout>